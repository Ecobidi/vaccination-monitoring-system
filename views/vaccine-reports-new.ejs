<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="title">New Vaccine Report</h3>
    </div>
  </div>
</div>
<div class="row space">
  <div class="col-12">
    <form action="/vaccine-reports/new" method="POST" class="card">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend>Vaccination Details</legend>
        </div>
        <div class="form-group col-md-3">
          <label>Patient ID: <strong class="text-danger">*</strong></label>
          <input required type="number" class="form-control" name="patient_id">
        </div>
        <div class="form-group col-md-4">
          <label>Vaccine Administered <strong class="text-danger">*</strong></label>
          <select required class="form-control" name="vaccine_name">
            <option></option>
            <% vaccines.forEach(s => { %>
              <option><%= s.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-5">
          <label>Vaccination Center <strong class="text-danger">*</strong></label>
          <select required class="form-control" name="vaccination_center">
            <option></option>
            <% vaccine_centers.forEach(s => { %>
              <option><%= s.name + " " + s.state %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Batch Administered: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="batch" placeholder="1st, 2nd, 3rd, 4th etc...">
        </div>
        <div class="form-group col-md-4">
          <label>Dosage Administered: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="dosage">
        </div>
        <div class="form-group col-md-4">
          <label>Date Administered: <strong class="text-danger">*</strong></label>
          <input type="date" class="form-control" name="date_administered">
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Add Vaccination Report</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>