<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="title">New Vaccine</h3>
    </div>
  </div> 
</div>
<div class="row space">
  <div class="col-12">
    <form action="/vaccines/new" method="POST" class="card no-border">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend>Vaccine Details</legend>
        </div>
        <div class="form-group col-md-4">
          <label>Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="name">
        </div>
        <div class="form-group col-md-8">
          <label>Manufacturer: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="manufacturer">
        </div>
        <div class="form-group col-md-4">
          <label>Expiry Date: <strong class="text-danger">*</strong></label> <br />
          <input type="text" class="form-control" name="expiry_date" placeholder="mm/yyyy">
        </div>
        <div class="form-group col-md-4">
          <label>Status: <strong class="text-danger">*</strong></label>
          <select type="text" class="form-control" name="status">
            <option value="active" selected>Active</option>
            <option value="inactive">Inactive</option>
            <option value="cancelled">Cancelled</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Description (Remark): <strong class="text-danger">*</strong></label>
          <textarea type="text" class="form-control" name="description"></textarea>
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Add Vaccine</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>