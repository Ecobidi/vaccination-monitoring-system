<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="title">New Vaccination Center</h3>
    </div>
  </div> 
</div>
<div class="row space">
  <div class="col-12">
    <form action="/vaccine-centers/new" method="POST" class="card">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend>Center Details</legend>
        </div>
        <div class="form-group col-md-6">
          <label>Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="name">
        </div>
        <div class="form-group col-md-6">
          <label>State Located <strong class="text-danger">*</strong></label>
          <select required class="form-control" name="state">
            <option></option>
            <% states.forEach(s => { %>
              <option value='<%= s %>'><%= s %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label>Town: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="city">
        </div>
        <div class="form-group col-md-6">
          <label>Office Address: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="address">
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Add Vaccination Center</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>