<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="title">New Vaccine Inventory Item</h3>
    </div>
  </div> 
</div>
<div class="row space">
  <div class="col-12">
    <form action="/vaccine-inventory-items/new" method="POST" class="card no-border">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend>Vaccine Inventory Item Details</legend>
        </div>
        <div class="form-group col-md-4">
          <label>Vaccine <strong class="text-danger">*</strong></label>
          <select required class="form-control" name="vaccine">
            <option>-- select vaccine --</option>
            <% vaccines.forEach(s => { %>
              <option value='<%= s._id %>'><%= s.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Quantity: <strong class="text-danger">*</strong></label>
          <input required type="number" class="form-control" name="quantity">
        </div>
        <div class="form-group col-md-4">
          <label>Date Added: <strong class="text-danger">*</strong></label> <br />
          <input type="date" class="form-control" name="date_added">
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Add Vaccine Inventory Item</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>