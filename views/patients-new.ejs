<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="title">New Patient</h3>
    </div>
  </div> 
</div>
<div class="row space">
  <div class="col-12">
    <form action="/patients/new" method="POST" class="card no-border">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend>Personal Details</legend>
        </div>
        <div class="form-group col-md-4">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-8">
          <label>Other Names: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="other_names">
        </div>
        <div class="form-group col-md-4">
          <label>Gender: <strong class="text-danger">*</strong></label> <br />
          <div class="form-check form-check-inline">
            <input required id="gender_yes" type="radio" class="form-check-input" name="gender" value="Female" />
            <label class="form-check-label" for="gender_yes">Female</label>
          </div>
          <div class="form-check form-check-inline">
            <input required id="gender_no" type="radio" class="form-check-input" name="gender" value="Male" />
            <label class="form-check-label" for="gender_no">Male</label>
          </div>
        </div>
        <div class="form-group col-md-4">
          <label>Phone: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-4">
          <label>Home Address: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="address">
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Add Patient</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>